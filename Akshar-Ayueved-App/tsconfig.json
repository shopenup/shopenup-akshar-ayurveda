{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "allowJs": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./.shopenup/server",
    "rootDir": "./",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "checkJs": false
  },
  "ts-node": {
    "swc": true
  },
  "include": ["**/*", ".shopenup/types/*"],
  "exclude": [
    "**/__tests__",
    "**/__fixtures__",
    "node_modules",
    ".shopenup/server",
    ".shopenup/admin",
    ".cache"
  ]
}
